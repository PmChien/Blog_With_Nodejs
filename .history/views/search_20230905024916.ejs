<div class="author">
    <h1 class="author__heading">Search Result</h1>
</div>
<section class="articles">
    <ul class="artiscles__ul">
        <% data.forEach(post => { %>
            <li><a href="/post/<%= post._id %>">
                <span>
                    <%= post.title %>
                </span>
                <span class="artiscles-list__date">
                    <%= post.createdAt.toDateString() %>
                </span>
            </a></li>
        <% }) %>
    </ul>
</section>